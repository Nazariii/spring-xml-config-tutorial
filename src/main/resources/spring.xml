<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.epam.nivash.spring.core.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="Nazar"/>
    </bean>

    <!--loggers-->
    <bean id="eventLogger" class="com.epam.nivash.spring.core.logger.ConsoleEventLogger"/>
    <bean id="eventFileLogger" class="com.epam.nivash.spring.core.logger.FileEventLogger" init-method="init"/>
    <bean id="cacheFileEventLogger" class="com.epam.nivash.spring.core.logger.CacheFileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg value="2"/>
    </bean>

    <!--loggers-->

    <bean id="app" class="com.epam.nivash.spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>


    <bean id="event" class="com.epam.nivash.spring.core.event.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.time.LocalDate" factory-method="now"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.time.format.DateTimeFormatter" factory-method="ofLocalizedDate">
                <constructor-arg type="FormatStyle" value="LONG"/>
            </bean>
        </constructor-arg>
    </bean>

</beans>